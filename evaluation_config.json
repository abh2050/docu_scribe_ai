{
  "evaluation_config": {
    "models": {
      "primary": "gpt-4",
      "fallback": "gpt-3.5-turbo"
    },
    "metrics": {
      "soap_evaluation": {
        "bleu": true,
        "rouge": true,
        "llm_judge": true,
        "clinical_accuracy": true,
        "completeness": true,
        "structure": true
      },
      "concept_evaluation": {
        "extraction_f1": true,
        "category_accuracy": true,
        "medical_terminology": true
      },
      "icd_evaluation": {
        "accuracy": true,
        "top_k_accuracy": [1, 3, 5],
        "mapping_quality": true
      }
    },
    "thresholds": {
      "soap_bleu_min": 0.3,
      "soap_rouge_min": 0.4,
      "concept_f1_min": 0.8,
      "icd_accuracy_min": 0.6,
      "clinical_accuracy_min": 0.7,
      "completeness_min": 0.8
    },
    "evaluation_schedule": {
      "frequency": "daily",
      "time": "02:00",
      "timezone": "UTC"
    },
    "output": {
      "save_detailed_results": true,
      "generate_summary_report": true,
      "send_alerts": true,
      "alert_thresholds": {
        "performance_drop": 0.1,
        "error_rate": 0.05
      }
    }
  }
}
